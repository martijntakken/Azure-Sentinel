{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Storage account name": {
      "defaultValue": "zscalerauthenticationsa",
      "type": "String",
      "metadata": {
        "description": "Name of the storage account, which will be created by the playbook"
      }
    },
    "Zscaler Admin Url": {
      "defaultValue": "https://admin.zscalerbeta.net",
      "type": "string",
      "metadata": {
        "description": "Zscaler admin url, eg: https://admin.zscalerbeta.net."
      }
    },
    "Zscaler Key": {
      "defaultValue": "",
      "type": "securestring",
      "metadata": {
        "description": "Your ZScaler key."
      }
    },
    "Zscaler Username": {
      "defaultValue": "",
      "type": "securestring",
      "metadata": {
        "description": "Your ZScaler username."
      }
    },
    "Zscaler Password": {
      "defaultValue": "",
      "type": "securestring",
      "metadata": {
        "description": "Your Scaler password."
      }
    },
    "Block Category": {
      "defaultValue": "OTHER_MISCELLANEOUS",
      "type": "String",
      "metadata": {
        "description": "ZScaler block category"
      }
    }
  },
  "variables": {
    "GithubUrl": "https://raw.githubusercontent.com/martijntakken/Azure-Sentinel/feature/zscaler/Playbooks/ZScaler",
    "ZScaler Authentication Playbook Name": "ZScaler-Authentication-Playbook"
  },
  "resources": [
    {
      "name": "Authentication",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Authentication/zscaler-authentication.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "[variables('ZScaler Authentication Playbook Name')]"},
          "Storage account name": { "value": "[parameters('Storage account name')]"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"},
          "Zscaler Key": { "value": "[parameters('Zscaler Key')]"},
          "Zscaler Username": { "value": "[parameters('Zscaler Username')]"},
          "Zscaler Password": { "value": "[parameters('Zscaler Password')]"}
        }
      }
    },
    {
      "name": "IP-Playbook",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'Authentication')]"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Add-IP-To-Category/ZScaler-Add-IP-To-Category.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "ZScaler-Add-IP-To-Category"},
          "ZScaler Authentation Playbook": { "value": "[variables('ZScaler Authentication Playbook Name')]"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"},
          "Block Category": { "value": "[parameters('Block Category')]"}
        }
      }
    },
        {
      "name": "URL-Playbook",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'Authentication')]"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Add-Url-To-Category/ZScaler-Add-Url-To-Category.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "ZScaler-Add-Url-To-Category"},
          "ZScaler Authentation Playbook": { "value": "[variables('ZScaler Authentication Playbook Name')]"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"},
          "Block Category": { "value": "[parameters('Block Category')]"}
        }
      }
    },
    {
      "name": "Category-Playbook",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'Authentication')]"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Url-Category-Lookup/ZScaler-Url-Category-Lookup.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "Url-Category-Lookup"},
          "ZScaler Authentation Playbook": { "value": "[variables('ZScaler Authentication Playbook Name')]"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"}
        }
      }
    },
    {
      "name": "Playbook",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'Authentication')]"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Get-Sandbox-Report-For-Hash/ZScaler-Get-Sandbox-Report-For-Hash.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "Get-Sandbox-Report-For-Hash"},
          "ZScaler Authentation Playbook": { "value": "[variables('ZScaler Authentication Playbook Name')]"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"}
        }
      }
    }
  ],
  "outputs": {}
}
