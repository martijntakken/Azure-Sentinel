{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Playbook name": {
      "defaultValue": "Zscaler-Authentication",
      "type": "String",
      "metadata": {
        "description": "Name of the playbook, used as name for the resources. Use only letters and dashes."
      }
    },
    "Storage account name": {
      "defaultValue": "zscalerauthenticationsa",
      "type": "String",
      "metadata": {
        "description": "Name of the storage account, which will be created by the playbook"
      }
    },
    "Zscaler Admin Url": {
      "defaultValue": "https://admin.zscalerbeta.net",
      "type": "string",
      "metadata": {
        "description": "Zscaler admin url, eg: https://admin.zscalerbeta.net."
      }
    },
    "Zscaler Key": {
      "defaultValue": "",
      "type": "string",
      "metadata": {
        "description": "Your ZScaler key."
      }
    },
    "Zscaler Username": {
      "defaultValue": "",
      "type": "string",
      "metadata": {
        "description": "Your ZScaler username."
      }
    },
    "Zscaler Password": {
      "defaultValue": "",
      "type": "securestring",
      "metadata": {
        "description": "Your Scaler password."
      }
    },
    "Category": {
      "defaultValue": "OTHER_MISCELLANEOUS",
      "type": "String",
      "metadata": {
        "description": "Name of the category"
      }
    }
  },
  "variables": {
    "GithubUrl": "https://raw.githubusercontent.com/martijntakken/Azure-Sentinel/feature/zscaler/Playbooks/ZScaler"
  },
  "resources": [
    {
      "name": "Authentication",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Authentication/zscaler-authentication.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "ZScaler Authentication"},
          "Storage account name": { "value": "[parameters('Storage account name')]"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"},
          "Zscaler Key": { "value": "[parameters('Zscaler Key')]"},
          "Zscaler Username": { "value": "[parameters('Zscaler Username')]"},
          "Zscaler Password": { "value": "[parameters('Zscaler Password')]"}
        }
      }
    },
    {
      "name": "Playbook",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('GithubUrl'), '/Add-IP-To-Category/ZScaler-Add-IP-To-Category.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "Playbook name": { "value": "ZScaler-Add-IP-To-Category"},
          "ZScaler Authentation Playbook": { "value": "ZScaler Authentication"},
          "Zscaler Admin Url": { "value": "[parameters('Zscaler Admin Url')]"},
          "Category": { "value": "[parameters('Category')]"}
        }
      }
    }
  ],
  "outputs": {}
}
